{
  "name": "behindthpe/page-analyzer",
  "type": "project",
  "authors": [
    {
      "name": "Alexey Kolvakh",
      "email": "alex.kolvah@mail.ru"
    }
  ],
  "description": "page analyzer",
  "license": "MIT",
  "scripts": {
    "test": "phpunit tests"
  },
  "autoload": {
    "psr-4": {
      "Page\\Analyzer\\": "src/"
    },
    "files": [
      "src/connect.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Page\\Analyzer\\Tests\\": "tests"
    }
  },
  "require": {
    "php" : ">=8.1",
    "ext-mbstring": "*",
    "slim/slim": "^4.9",
    "slim/psr7": "^1.7",
    "slim/http": "^1.4",
    "slim/php-view": "^3.4",
    "php-di/php-di": "^7.0",
    "slim/flash": "^0.4.0",
    "illuminate/collections": "^12.0",
    "nesbot/carbon": "^3.9",
    "symfony/string": "^7.2",
    "symfony/security-csrf": "^7.2",
    "symfony/form": "^7.2",
    "kris/laravel-form-builder": "^1.54"
  },
  "require-dev": {
    "symfony/var-dumper": "^7.2",
    "phpunit/phpunit": "^11.5",
    "squizlabs/php_codesniffer": "*",
    "phpstan/phpstan-phpunit": "^2.0",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan": "^2.1"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
